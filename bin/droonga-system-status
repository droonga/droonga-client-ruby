require "json"

require "droonga/command/base"

module Droonga
  module Command
    class SystemStatus < Base
      def run
        parse_options do |option|
          option.on(:pretty,
                    "Output result as a pretty printed JSON.",
                    :default => false)
        end

        response = request("dataset" => @options[:dataset],
                           "type"    => "system.status")
        raise NoResponse.new unless response
        body = response["body"]

        if @options[:pretty]
          puts(JSON.pretty_generate(body))
        else
          puts(JSON.generate(body))
        end

        true
      rescue MissingRequiredParameter
        puts(@options)
        false
      rescue NoResponse
        puts("Error: request timed out.")
        false
      end
    end
  end
end

exit(Droonga::Command::SystemStatus.new.run)
